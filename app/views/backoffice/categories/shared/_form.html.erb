<div style="margin-top: 7vh"></div>
<% if @category.errors.any? %>
<div type="button" class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
<% @category.errors.full_messages.each do |message| %>
    <li><%= message %></li>
<% end %>
</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
        <!-- /.panel-heading -->
<div class="panel-body">
    <%= form_for([:backoffice, @category]) do |f| %>
        <div class="form-group col-md-12">
            <label for="">Descrição - Editando</label>
            <%= f.text_field :description, class:"form-control", placeholder: "Animais/Brinquedos" %>
    </div>
    <button type="submit" class="form-control btn btn-primary">Cadastrar</button> 
    <% end %>
</div>
</div>