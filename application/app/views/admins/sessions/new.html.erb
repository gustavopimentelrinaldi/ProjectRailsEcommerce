<div style="margin-top: 15vh">
    <% if @admin.errors.any? %>
    <div type="button" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </div>
    <% end %>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Parte Administrativa - Login</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field form-group">
                      <%= f.label :name %><br />
                      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Seu email" %>
                    </div>
                    
                    <div class="field form-group">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Sua senha" %>
                    </div>
                    
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                    
                    <div class="actions">
                      <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<% flash.each do |key, value| %>

<script>
    $.notify("<%= value %>", "info");
</script>

<% end %>