<style>
    body{
      background: #eeeeee;
    }
  </style>
    
    
    <div id="loginbox" style="margin-top:150px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
        <div class="panel panel-default" >
            <div class="panel-heading">
                <div class="panel-title"><h2>Redefinir senha!</h2></div>
            </div>     
            <div style="padding-top:30px" class="panel-body" >
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.hidden_field :reset_password_token %>
  
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em><br />
                  <% end %> <br>
                    <div class="field input-group form-group">
                      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>                      
                      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "nova senha" %>
                    </div>
                   
                    <div class="field input-group form-group">
                      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>                      
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirme sua senha" %>
                    </div>
                
                    <div class="actions form-group">
                      <%= f.submit "Redefinir", class: "btn btn-success pull-right" %>
                    </div>
  
                    <div class="form-group">
                      <%= render "members/shared/links" %>
                    </div>
                <% end %>
  
            </div>                     
      </div>  
    </div>
   
  