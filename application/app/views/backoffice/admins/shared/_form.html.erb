<div style="margin-top: 7vh"></div>
<% if @admin.errors.any? %>
<div type="button" class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
<% @admin.errors.full_messages.each do |message| %>
    <li><%= message %></li>
<% end %>
</div>
<% end %>
<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
        <!-- /.panel-heading -->
<div class="panel-body">
    <%= form_for([:backoffice, @admin]) do |f| %>
        <div class="form-group col-md-12">
            <label for="">Administradores - Atualizando</label>
            <div class="form-group">
                <%= f.text_field :name, class:"form-control", placeholder: "Nome do ADM" %>
            </div>
            <div class="form-group">
                <%= f.text_field :email, class:"form-control", placeholder: "Email" %>
            </div>
            <% if policy(@admin).edit? %>
            <div class="form-group">
                <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                    <div class="radio">
                       <%= b.label {b.radio_button + b.text} %>
                    </div>
                <% end %>
            </div>
            <% end %>
            <div class="form-group">
                <%= f.password_field :password, class:"form-control", placeholder: "senha" %>
            </div>
            <div class="form-group">
                <%= f.password_field :password_confirmation, class:"form-control", placeholder: "Confirmação de senha" %>
            </div>
        </div>
    <button type="submit" class="form-control btn btn-primary">Atualizar</button> 
    <% end %>
</div>
</div>